# ── OpenRouter LLM ──
OPENROUTER_API_KEY=sk-or-v1-xxxxx
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# ── Flask ──
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# ── Logging ──
LOG_LEVEL=INFO
LOG_FORMAT=console

# ── Session & Cache ──
SESSION_TTL_SECONDS=3600
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=256

